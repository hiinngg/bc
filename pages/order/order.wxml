                <view class="zan-cell__icon zan-icon    zan-icon-checked" style="color:#38f;margin-right:15rpx;">
                      <checkbox hidden value="01760" checked="false"></checkbox>
                </view>
                <view class="zan-cell__bd">
                  <view class="zan-cell__text">李锦请</view>
                  <view class="zan-cell__desc">442000199312115216</view>
                </view>
                <view class="zan-cell__ft">
                  <view class="zan-cell__icon zan-icon zan-icon-edit" style="color:#38f;"></view>
                </view>
              </view>
            </label>
          </checkbox-group>



        </view>
      </view>
    </view>
  </view>



</view>